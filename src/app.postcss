@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

/* App utilities */
.app-root { @apply bg-white text-slate-900 dark:bg-slate-950 dark:text-slate-100; }
body {
	font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
	@apply text-[16px] leading-6 antialiased;
}
.icon-btn { @apply inline-flex items-center justify-center rounded-md border px-2.5 py-2 hover:bg-slate-100 dark:hover:bg-slate-800; }
.btn-primary { @apply inline-flex items-center gap-2 rounded-lg bg-slate-900 text-white dark:bg-white dark:text-slate-900 px-3 py-2 shadow-sm hover:opacity-90; }
.btn-soft { @apply inline-flex items-center gap-2 rounded-lg bg-slate-100 text-slate-900 dark:bg-slate-800 dark:text-slate-100 px-3 py-2 hover:bg-slate-200 dark:hover:bg-slate-700; }
.card { @apply rounded-2xl border shadow-sm bg-white/70 dark:bg-slate-900/70 backdrop-blur; }
.card-header { @apply flex items-center justify-between p-4 border-b; }
.card-body { @apply p-4; }
.badge { @apply inline-flex items-center gap-1 rounded-full border px-2 py-1 text-xs; }
.muted { @apply text-slate-500 dark:text-slate-400; }
.title { @apply text-sm font-medium muted; }

/* Accessible focus rings */
.btn-primary:focus-visible,
.btn-soft:focus-visible,
.icon-btn:focus-visible,
.input:focus-visible,
select:focus-visible,
button:focus-visible,
a:focus-visible {
	@apply outline-none ring-2 ring-offset-2 ring-slate-400 dark:ring-slate-500 ring-offset-white dark:ring-offset-slate-950;
}
